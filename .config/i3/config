#######################################################
#               I3 BAR CONFIGURATION                  #
#######################################################

# Laptop monitor bar
bar {
  output primary
  #i3-bar font configuration
  font pango:Cantarell, 11
  #i3-bar position <top|bottom>
  position top
  #i3-bar strip workspace numbers <yes|no>
  strip_workspace_numbers yes
  #|-                                              |
  #|if yes, workspaces has been declared           |
  #|as num:str, then only the 'str' value will     |
  #|be showed                                      |
  #|-                                              |
  
  #i3-bar status command application
  #|-                                              |
  #|* i3status by default                          |
  #|* i3status-rust in use                         |
  #|-                                              |
  #
  status_command i3status-rs     #i3status-rust
  #status_command i3status       #i3status
  #system tray
  tray_output primary
  #i3-bar color configuration
  colors {
    background #282A36
    statusline #F8F8F2
    separator  #44475A

    focused_workspace  #44475A #44475A #F8F8F2
    active_workspace   #282A36 #44475A #F8F8F2
    inactive_workspace #282A36 #282A36 #BFBFBF
    urgent_workspace   #FF5555 #FF5555 #F8F8F2
    binding_mode       #6272A4 #6272A4 #F8F8F2
  }
}

# secundary monitor bar
bar {
  output nonprimary
  #i3-bar font configuration
  font pango:Cantarell, 9
  #i3-bar position <top|bottom>
  position top
  #i3-bar strip workspace numbers <yes|no>
  strip_workspace_numbers yes
  #|-                                              |
  #|if yes, workspaces has been declared           |
  #|as num:str, then only the 'str' value will     |
  #|be showed                                      |
  #|-                                              |
  #
  #Show binding mode indicator
  binding_mode_indicator no
  #i3-bar status command application
  #|-                                              |
  #|* i3status by default                          |
  #|* i3status-rust in use                         |
  #|-                                              |
  #
  #status_command i3status-rs   #i3status-rust
  status_command i3status       #i3status
  tray_output primary
  #i3-bar color configuration
  colors {
    background #282A36
    statusline #F8F8F2
    separator  #44475A

    focused_workspace  #44475A #44475A #F8F8F2
    active_workspace   #282A36 #44475A #F8F8F2
    inactive_workspace #282A36 #282A36 #BFBFBF
    urgent_workspace   #FF5555 #FF5555 #F8F8F2
    binding_mode       #6272A4 #6272A4 #F8F8F2
  }
}

