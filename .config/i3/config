bindsym $mod+Shift+t exec --no-startup-id kill -9 `ps aux|grep i3-legend.conf|grep -v grep|grep -v emacs|awk '{print $2}'`
#
# kill compositor
bindsym $mod+$alt+t exec --no-startup-id pkill picom
